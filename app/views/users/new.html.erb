<% content_for :title, "New user" %>

<div class="d-flex justify-content-center align-items-center min-vh-100 py-5">
  <div class="card border-0 shadow-sm rounded-4" style="width: 100%; max-width: 500px;">
    <div class="card-body p-4">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0 text-primary">
          <i class="bi bi-person-plus me-2"></i>Create Account
        </h2>
      </div>

      <%= render "form", user: @user %>

      <div class="text-center mt-4">
        <small class="text-muted">Already have an account? <%= link_to "Sign in", login_path %></small>
      </div>
    </div>
  </div>
</div>