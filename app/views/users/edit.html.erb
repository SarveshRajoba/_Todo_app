<% content_for :title, "Editing user" %>

<div class="d-flex justify-content-center align-items-center min-vh-100 py-5 border-top border-bottom" style="font-family: 'Poppins', sans-serif;">
  <div class="card  border-primary border-2 shadow-lg rounded-4" style="width: 100%; max-width: 500px;">
    <div class="card-body p-4">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0 text-primary">
          <i class="bi bi-person-gear me-2"></i>Edit Profile
        </h2>
      </div>

      <%= render "form", user: @user %>

      <div class="text-center mt-4">
  <%= button_to "Delete Account", @user, method: :delete, 
        data: { confirm: "Are you sure? This cannot be undone." }, 
        class: "btn btn-sm btn-outline-danger text-danger",
        style: "transition: background-color 0.3s ease, color 0.3s ease; border-color: #dc3545;",
        onmouseover: "this.style.backgroundColor='#ffc107'; this.style.color='black'; this.style.borderColor='#ffc107';",
        onmouseout: "this.style.backgroundColor='transparent'; this.style.color='#dc3545'; this.style.borderColor='#dc3545';" %>
</div>

    </div>
  </div>
</div>
